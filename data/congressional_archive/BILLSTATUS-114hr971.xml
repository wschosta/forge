      <billSummaries>
        <item>
          <actionDate>2015-02-13</actionDate>
          <actionDesc>Introduced in House</actionDesc>
          <lastSummaryUpdateDate>2015-07-07T18:28:16Z</lastSummaryUpdateDate>
          <versionCode>00</versionCode>
